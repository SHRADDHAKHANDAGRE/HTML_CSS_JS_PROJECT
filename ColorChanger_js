const btn = document.getElementById("btn");

        const randomNum = () => Math.floor(Math.random() * 256);

        const changeColor = () => {
            const randomColor = `rgb(${randomNum()}, ${randomNum()}, ${randomNum()})`;
            document.body.style.backgroundColor = randomColor; // Fixed 'backgroundcolor' typo
        }

        btn.addEventListener("click", changeColor); // Fixed typo 'addE0ventListener' to 'addEventListener'
        window.addEventListener("load", changeColor);
